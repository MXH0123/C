void func1(int arr[][3], int n, int m)
{
	printf("%d\n", arr[0][0];
}

void func2(int (*arr)[3], int n, int m)
{
	printf("%d\n", arr[0][0];
}

void func3(int *arr, int n, int m;
{
	printf("%d\n", arr[0*n+0];
}

int main()
{
	int arr[3][3];
	memset(arr, 0, sizeof(arr));
	func1(arr, 3, 3);
	func2(arr, 3, 3);
	func3(arr[0], 3, 3);//func3(arr, 3, 3)
	return 0;
}
